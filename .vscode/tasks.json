{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python File",
      "type": "shell",
      "command": "python",
      "args": ["${file}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Format: black",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python -m black",
      "args": ["."],
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "NPM: start",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
